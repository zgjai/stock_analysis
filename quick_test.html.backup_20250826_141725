    <title>快速测试</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>交易记录页面修复验证</h2>
        
        <div class="alert alert-info">
            <h5>修复内容</h5>
            <p>修复了第704行的打字错误：<code>this.perPagehis.perPage</code> → <code>this.perPage</code></p>
        </div>
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>测试结果</h5>
                    </div>
                    <div class="card-body">
                        <div id="test-results">正在测试...</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-12">
                <a href="/trading-records" class="btn btn-primary">访问交易记录页面</a>
                <button class="btn btn-success" onclick="testAPI()">测试API</button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        async function testAPI() {
            const resultsDiv = document.getElementById('test-results');
            resultsDiv.innerHTML = '<div class="spinner-border spinner-border-sm me-2"></div>测试中...';
            
            try {
                const response = await fetch('/api/trades');
                const data = await response.json();
                
                if (data.success) {
                    resultsDiv.innerHTML = `
                        <div class="alert alert-success">
                            <h6>✅ API测试成功</h6>
                            <p>获取到 ${data.data.trades?.length || 0} 条交易记录</p>
                            <p>总计: ${data.data.total || 0} 条</p>
                        </div>
                    `;
                } else {
                    resultsDiv.innerHTML = `
                        <div class="alert alert-danger">
                            <h6>❌ API测试失败</h6>
                            <p>${data.error?.message || '未知错误'}</p>
                        </div>
                    `;
                }
            } catch (error) {
                resultsDiv.innerHTML = `
                    <div class="alert alert-danger">
                        <h6>❌ 连接失败</h6>
                        <p>${error.message}</p>
                    </div>
                `;
            }
        }
        
        // 页面加载时自动测试
        document.addEventListener('DOMContentLoaded', testAPI);
    </script>
</body>
</html>