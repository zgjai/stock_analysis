                                            <div class="input-group">
                                                <input type="number" class="form-control" id="sell-ratio" step="0.01" placeholder="50.00">
                                                <span class="input-group-text">%</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">预计收益率</label>
                                            <div class="form-control-plaintext">
                                                <span id="expected-profit-ratio" class="fw-bold">-</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- 分批止盈设置容器 -->
                            <div id="batch-profit-settings" style="display: none;">
                                <div id="profit-targets-container"></div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
