    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- 工具函数 -->
    <script src="static/js/utils.js"></script>
    
    <!-- 分批止盈组件 -->
    <script src="static/js/profit-targets-manager.js"></script>
    
    <script>
        let profitTargetsManager = null;
        
        document.addEventListener('DOMContentLoaded', function() {
            setupEventListeners();
            updateFormData();
        });
        
        function setupEventListeners() {
            // 交易类型变化
            document.getElementById('trade-type').addEventListener('change', function(e) {
                const isBuy = e.target.value === 'buy';
                document.getElementById('buy-settings').style.display = isBuy ? 'block' : 'none';
                updateFormData();
            });
            
            // 价格变化
            document.getElementById('price').addEventListener('input', function() {
                updateBuyPrice();
                updateFormData();
            });
            
            // 分批止盈开关
            document.getElementById('use-batch-profit-taking').addEventListener('change', function(e) {
                toggleBatchProfitTaking(e.target.checked);
                updateFormData();
            });
            
            // 单一止盈设置变化
            ['stop-loss-price', 'take-profit-ratio', 'sell-ratio'].forEach(id => {
                document.getElementById(id).addEventListener('input', updateFormData);
            });
            
            // 其他字段变化
            ['stock-code', 'stock-name', 'quantity', 'notes'].forEach(id => {
                document.getElementById(id).addEventListener('input', updateFormData);
            });
        }
        
        function toggleBatchProfitTaking(enabled) {
            const singleSettings = document.getElementById('single-profit-settings');
            const batchSettings = document.getElementById('batch-profit-settings');
            
            if (enabled) {
                singleSettings.style.display = 'none';
                batchSettings.style.display = 'block';
                
                // 初始化分批止盈组件
                if (!profitTargetsManager) {
                    const container = document.getElementById('profit-targets-container');
                    const buyPrice = parseFloat(document.getElementById('price').value) || 0;
                    
                    profitTargetsManager = new ProfitTargetsManager(container, {
                        maxTargets: 5,
                        minTargets: 1,
                        buyPrice: buyPrice,
                        onTargetsChange: function(targets, isValid) {
                            console.log('Targets changed:', targets, 'Valid:', isValid);
                            updateFormData();
                        },
                        onValidationChange: function(isValid, errors) {
                            console.log('Validation changed:', isValid, errors);
                        }
                    });
                }
            } else {
                singleSettings.style.display = 'block';
                batchSettings.style.display = 'none';
            }
        }
        
        function updateBuyPrice() {
            if (profitTargetsManager) {
                const buyPrice = parseFloat(document.getElementById('price').value) || 0;
                profitTargetsManager.setBuyPrice(buyPrice);
            }
        }
        
        function updateFormData() {
            const formData = {
                stockCode: document.getElementById('stock-code').value,
                stockName: document.getElementById('stock-name').value,
                tradeType: document.getElementById('trade-type').value,
                price: parseFloat(document.getElementById('price').value) || 0,
                quantity: parseInt(document.getElementById('quantity').value) || 0,
                notes: document.getElementById('notes').value,
                useBatchProfitTaking: document.getElementById('use-batch-profit-taking').checked
            };
            
            if (formData.useBatchProfitTaking && profitTargetsManager) {
                formData.profitTargets = profitTargetsManager.getTargets();
                formData.isValidTargets = profitTargetsManager.isValidTargets();
                formData.validationErrors = profitTargetsManager.getValidationErrors();
            } else {
                formData.stopLossPrice = parseFloat(document.getElementById('stop-loss-price').value) || null;
                formData.takeProfitRatio = parseFloat(document.getElementById('take-profit-ratio').value) || null;
                formData.sellRatio = parseFloat(document.getElementById('sell-ratio').value) || null;
            }
            
            // 计算总金额
            formData.totalAmount = formData.price * formData.quantity;
            
            document.getElementById('form-data-preview').textContent = JSON.stringify(formData, null, 2);
        }
        
        function resetForm() {
            document.getElementById('demo-trade-form').reset();
            document.getElementById('use-batch-profit-taking').checked = false;
            toggleBatchProfitTaking(false);
            
            if (profitTargetsManager) {
                profitTargetsManager.clear();
            }
            
            updateFormData();
        }
        
        function saveForm() {
            const formData = JSON.parse(document.getElementById('form-data-preview').textContent);
            
            // 验证表单
            if (!formData.stockCode || !formData.stockName || !formData.tradeType || !formData.price || !formData.quantity) {
                alert('请填写所有必填字段');
                return;
            }
            
            if (formData.useBatchProfitTaking && !formData.isValidTargets) {
                alert('分批止盈设置有误，请检查后重试');
                return;
            }
            
            // 模拟保存
            console.log('保存表单数据:', formData);
            alert('表单数据已保存到控制台，请查看开发者工具');
        }
        
        // 简化的消息函数
        function showSuccess(message) {
            console.log('Success:', message);
        }
        
        function showError(message) {
            console.error('Error:', message);
        }
        
        function showWarning(message) {
            console.warn('Warning:', message);
        }
    </script>
</body>
</html>