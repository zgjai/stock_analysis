        <!-- 功能演示按钮 -->
        <div class="mt-4">
            <h5>功能演示</h5>
            <button class="btn btn-warning me-2" onclick="demoSaving()">演示保存状态</button>
            <button class="btn btn-info me-2" onclick="demoFloatingProfit()">演示浮盈计算</button>
            <button class="btn btn-success" onclick="demoSaved()">演示保存完成</button>
        </div>
