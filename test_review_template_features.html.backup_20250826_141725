    <script>
        function demoSaving() {
            const statusDisplay = document.getElementById('save-status-display');
            const progress = document.getElementById('save-progress');
            const saveBtn = document.getElementById('save-review-btn');
            const saveText = saveBtn.querySelector('.save-btn-text');
            const saveSpinner = saveBtn.querySelector('.save-btn-spinner');
            
            // 显示保存中状态
            statusDisplay.className = 'badge bg-warning saving';
            statusDisplay.innerHTML = '<i class="fas fa-spinner fa-spin"></i> 保存中...';
            progress.style.display = 'block';
            progress.querySelector('.progress-bar').style.width = '50%';
            
            saveBtn.disabled = true;
            saveText.style.display = 'none';
            saveSpinner.style.display = 'inline-flex';
            
            // 3秒后恢复
            setTimeout(demoSaved, 3000);
        }
        
        function demoSaved() {
            const statusDisplay = document.getElementById('save-status-display');
            const progress = document.getElementById('save-progress');
            const saveBtn = document.getElementById('save-review-btn');
            const saveText = saveBtn.querySelector('.save-btn-text');
            const saveSpinner = saveBtn.querySelector('.save-btn-spinner');
            
            // 显示保存成功状态
            statusDisplay.className = 'badge bg-success saved';
            statusDisplay.innerHTML = '<i class="fas fa-check-circle"></i> 已保存';
            progress.style.display = 'none';
            
            saveBtn.disabled = false;
            saveText.style.display = 'inline';
            saveSpinner.style.display = 'none';
            
            // 更新最后保存时间
            const lastSavedTime = document.getElementById('last-saved-info');
            const now = new Date();
            lastSavedTime.innerHTML = `<i class="fas fa-clock"></i> 最后保存: ${now.toLocaleTimeString()}`;
        }
        
        function demoFloatingProfit() {
            const currentPriceInput = document.getElementById('current-price-input');
            const profitRatio = document.getElementById('floating-profit-ratio');
            const profitAmount = document.getElementById('profit-amount-display');
            const container = profitRatio.closest('.floating-profit-container');
            
            // 模拟不同的价格变化
            const prices = [11.50, 12.00, 12.50, 13.00, 11.00];
            let index = 0;
            
            const interval = setInterval(() => {
                const price = prices[index];
                const buyPrice = 11.50;
                const ratio = ((price - buyPrice) / buyPrice * 100).toFixed(2);
                const amount = (price - buyPrice).toFixed(2);
                
                currentPriceInput.value = price;
                profitRatio.textContent = `${ratio >= 0 ? '+' : ''}${ratio}%`;
                profitAmount.textContent = `${amount >= 0 ? '+' : ''}¥${Math.abs(amount)}`;
                
                // 更新颜色
                container.className = 'floating-profit-container';
                profitRatio.className = 'form-control-plaintext fw-bold';
                
                if (ratio > 0) {
                    container.classList.add('profit');
                    profitRatio.classList.add('text-success');
                } else if (ratio < 0) {
                    container.classList.add('loss');
                    profitRatio.classList.add('text-danger');
                } else {
                    container.classList.add('neutral');
                    profitRatio.classList.add('text-muted');
                }
                
                index++;
                if (index >= prices.length) {
                    clearInterval(interval);
                }
            }, 1000);
        }
    </script>
