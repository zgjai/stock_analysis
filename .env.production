# 生产环境配置文件
# 复制此文件为 .env 并根据实际环境修改配置

# Flask配置
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# 数据库配置
DATABASE_URL=sqlite:///data/trading_journal.db
# 对于MySQL: mysql://username:password@localhost/trading_journal
# 对于PostgreSQL: postgresql://username:password@localhost/trading_journal

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# 历史交易记录配置
REVIEW_IMAGES_UPLOAD_FOLDER=uploads/reviews/images
REVIEW_IMAGES_MAX_SIZE=5242880  # 5MB per image
REVIEW_IMAGES_MAX_COUNT=10      # Maximum images per review

# AKShare API配置
AKSHARE_TIMEOUT=30
AKSHARE_RETRY_COUNT=3
AKSHARE_CACHE_TIMEOUT=300  # 5 minutes

# 分页配置
ITEMS_PER_PAGE=20
MAX_ITEMS_PER_PAGE=100

# 安全配置
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# 缓存配置
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# 性能配置
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=10
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=3600
SQLALCHEMY_ENGINE_OPTIONS_POOL_PRE_PING=true

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# 邮件配置（用于错误通知）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
ADMIN_EMAIL=admin@your-domain.com