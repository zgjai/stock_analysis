    <script>
        let testResults = [];
        
        function addTestResult(test, success, message) {
            testResults.push({ test, success, message, time: new Date().toLocaleTimeString() });
            updateTestDisplay();
        }
        
        function updateTestDisplay() {
            const resultsEl = document.getElementById('test-results');
            const html = testResults.map(result => {
                const icon = result.success ? 'check-circle text-success' : 'times-circle text-danger';
                const badge = result.success ? 'success' : 'danger';
                return `
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-${icon} me-2"></i>
                        <span class="badge bg-${badge} me-2">${result.time}</span>
                        <strong>${result.test}:</strong>
                        <span class="ms-2">${result.message}</span>
                    </div>
                `;
            }).join('');
            resultsEl.innerHTML = html || '<div class="text-muted">æš‚æ— æµ‹è¯•ç»“æœ</div>';
        }
        
        function checkObjects() {
            const checks = [
                { name: 'bootstrap', obj: window.bootstrap },
                { name: 'bootstrap.Modal', obj: window.bootstrap?.Modal },
                { name: 'ReviewPageGlobals', obj: window.ReviewPageGlobals },
                { name: 'openReviewModal', obj: window.openReviewModal },
                { name: 'FloatingProfitCalculator', obj: window.FloatingProfitCalculator },
                { name: 'ReviewSaveManager', obj: window.ReviewSaveManager },
                { name: 'saveReview', obj: window.saveReview }
            ];
            
            const results = checks.map(check => {
                const exists = check.obj !== undefined;
                const status = exists ? 'success' : 'danger';
                const icon = exists ? 'check-circle' : 'times-circle';
                
                return `
                    <div class="d-flex align-items-center mb-1">
                        <i class="fas fa-${icon} text-${status} me-2"></i>
                        <small>${check.name}: ${exists ? 'âœ“' : 'âœ—'}</small>
                    </div>
                `;
            }).join('');
            
            document.getElementById('objects-status').innerHTML = results;
        }
        
        function checkBootstrap() {
            const modal = document.getElementById('reviewModal');
            let status = '';
            
            if (typeof bootstrap === 'undefined') {
                status += '<div class="text-danger"><i class="fas fa-times-circle me-1"></i>BootstrapæœªåŠ è½½</div>';
            } else {
                status += '<div class="text-success"><i class="fas fa-check-circle me-1"></i>Bootstrapå·²åŠ è½½</div>';
                
                if (bootstrap.Modal) {
                    status += '<div class="text-success"><i class="fas fa-check-circle me-1"></i>Modalç±»å¯ç”¨</div>';
                    
                    try {
                        const testModal = new bootstrap.Modal(modal);
                        status += '<div class="text-success"><i class="fas fa-check-circle me-1"></i>Modalå®ä¾‹åˆ›å»ºæˆåŠŸ</div>';
                    } catch (error) {
                        status += `<div class="text-danger"><i class="fas fa-times-circle me-1"></i>Modalåˆ›å»ºå¤±è´¥: ${error.message}</div>`;
                    }
                } else {
                    status += '<div class="text-danger"><i class="fas fa-times-circle me-1"></i>Modalç±»ä¸å¯ç”¨</div>';
                }
            }
            
            document.getElementById('bootstrap-status').innerHTML = status;
        }
        
        function testModalOpen() {
            try {
                // è®¾ç½®æ¨¡æ‹Ÿæ•°æ®
                window.ReviewPageGlobals = window.ReviewPageGlobals || {};
                window.ReviewPageGlobals.currentHoldings = [
                    {
                        stock_code: '000001',
                        stock_name: 'å¹³å®‰é“¶è¡Œ',
                        avg_price: 10.00,
                        total_quantity: 1000,
                        holding_days: 15
                    }
                ];
                
                if (typeof window.openReviewModal === 'function') {
                    window.openReviewModal('000001');
                    addTestResult('æ¨¡æ€æ¡†æ‰“å¼€', true, 'å‡½æ•°è°ƒç”¨æˆåŠŸï¼Œè¯·æ£€æŸ¥æ¨¡æ€æ¡†æ˜¯å¦æ˜¾ç¤º');
                } else {
                    addTestResult('æ¨¡æ€æ¡†æ‰“å¼€', false, 'openReviewModalå‡½æ•°ä¸å­˜åœ¨');
                }
            } catch (error) {
                addTestResult('æ¨¡æ€æ¡†æ‰“å¼€', false, error.message);
            }
        }
        
        function testFloatingProfit() {
            try {
                if (window.FloatingProfitCalculator) {
                    const calculator = new window.FloatingProfitCalculator();
                    calculator.setBuyPrice(10.00);
                    calculator.setCurrentPrice(11.50);
                    calculator.setQuantity(1000);
                    addTestResult('æµ®ç›ˆè®¡ç®—', true, 'è®¡ç®—å™¨åˆ›å»ºå’Œè®¡ç®—æˆåŠŸ');
                } else {
                    addTestResult('æµ®ç›ˆè®¡ç®—', false, 'FloatingProfitCalculatorç±»ä¸å­˜åœ¨');
                }
            } catch (error) {
                addTestResult('æµ®ç›ˆè®¡ç®—', false, error.message);
            }
        }
        
        function testSaveFunction() {
            try {
                if (typeof window.saveReview === 'function') {
                    // å¡«å†™æµ‹è¯•æ•°æ®
                    document.getElementById('review-stock-code').value = '000001';
                    document.getElementById('review-date').value = new Date().toISOString().split('T')[0];
                    document.getElementById('decision').value = 'hold';
                    document.getElementById('reason').value = 'æµ‹è¯•ä¿å­˜åŠŸèƒ½';
                    
                    addTestResult('ä¿å­˜åŠŸèƒ½', true, 'saveReviewå‡½æ•°å­˜åœ¨ï¼Œæµ‹è¯•æ•°æ®å·²å¡«å†™');
                } else {
                    addTestResult('ä¿å­˜åŠŸèƒ½', false, 'saveReviewå‡½æ•°ä¸å­˜åœ¨');
                }
            } catch (error) {
                addTestResult('ä¿å­˜åŠŸèƒ½', false, error.message);
            }
        }
        
        function testSaveReview() {
            if (typeof window.saveReview === 'function') {
                window.saveReview().then(result => {
                    addTestResult('å®é™…ä¿å­˜', result, result ? 'ä¿å­˜æˆåŠŸ' : 'ä¿å­˜å¤±è´¥');
                }).catch(error => {
                    addTestResult('å®é™…ä¿å­˜', false, error.message);
                });
            } else {
                addTestResult('å®é™…ä¿å­˜', false, 'saveReviewå‡½æ•°ä¸å­˜åœ¨');
            }
        }
        
        // é¡µé¢åŠ è½½å®Œæˆåæ‰§è¡Œæ£€æŸ¥
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                checkObjects();
                checkBootstrap();
            }, 1000);
        });
