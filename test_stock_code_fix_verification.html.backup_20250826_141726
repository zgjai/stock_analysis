    <script>
        // è®¾ç½®å½“å‰æ—¶é—´ä¸ºé»˜è®¤äº¤æ˜“æ—¥æœŸ
        document.getElementById('test-trade-date').value = new Date().toISOString().slice(0, 16);

        // ç»“æœè¾“å‡ºå‡½æ•°
        function logResult(message, type = 'info') {
            const results = document.getElementById('test-results');
            const timestamp = new Date().toLocaleTimeString();
            const typeClass = `status-${type}`;
            
            const logLine = `[${timestamp}] ${message}`;
            results.innerHTML += `<span class="${typeClass}">${logLine}</span>\n`;
            results.scrollTop = results.scrollHeight;
        }

        function clearResults() {
            document.getElementById('test-results').innerHTML = 'æµ‹è¯•ç»“æœå·²æ¸…ç©ºï¼Œç­‰å¾…æ–°çš„æµ‹è¯•...\n';
        }

        // FormUtils.serialize å®ç°ï¼ˆä»utils.jså¤åˆ¶ï¼‰
        const FormUtils = {
            serialize: (form) => {
                const formData = new FormData(form);
                const data = {};
                
                for (let [key, value] of formData.entries()) {
                    if (data[key]) {
                        if (Array.isArray(data[key])) {
                            data[key].push(value);
                        } else {
                            data[key] = [data[key], value];
                        }
                    } else {
                        data[key] = value;
                    }
                }
                
                return data;
            }
        };

        // å¿«é€Ÿæµ‹è¯•
        function runQuickTest() {
            clearResults();
            logResult('=== å¼€å§‹å¿«é€Ÿæµ‹è¯• ===', 'info');
            
            const form = document.getElementById('test-trade-form');
            
            // 1. æ£€æŸ¥è¡¨å•å…ƒç´ 
            logResult('1. æ£€æŸ¥è¡¨å•å…ƒç´ ...', 'info');
            if (!form) {
                logResult('âŒ è¡¨å•å…ƒç´ æœªæ‰¾åˆ°', 'error');
                return;
            }
            logResult('âœ… è¡¨å•å…ƒç´ å­˜åœ¨', 'success');
            
            // 2. æ£€æŸ¥å¿…å¡«å­—æ®µ
            logResult('2. æ£€æŸ¥å¿…å¡«å­—æ®µ...', 'info');
            const requiredFields = ['stock_code', 'stock_name', 'trade_type', 'price', 'quantity', 'reason'];
            let allFieldsValid = true;
            
            requiredFields.forEach(fieldName => {
                const element = document.getElementById(`test-${fieldName.replace('_', '-')}`);
                if (!element) {
                    logResult(`âŒ å­—æ®µå…ƒç´ æœªæ‰¾åˆ°: ${fieldName}`, 'error');
                    allFieldsValid = false;
                    return;
                }
                
                const value = element.value.trim();
                if (!value) {
                    logResult(`âŒ å¿…å¡«å­—æ®µä¸ºç©º: ${fieldName}`, 'error');
                    allFieldsValid = false;
                } else {
                    logResult(`âœ… ${fieldName}: "${value}"`, 'success');
                }
            });
            
            if (!allFieldsValid) {
                logResult('âŒ å¿…å¡«å­—æ®µæ£€æŸ¥å¤±è´¥', 'error');
                return;
            }
            
            // 3. æµ‹è¯•è¡¨å•åºåˆ—åŒ–
            logResult('3. æµ‹è¯•è¡¨å•åºåˆ—åŒ–...', 'info');
            const serializedData = FormUtils.serialize(form);
            logResult('åºåˆ—åŒ–ç»“æœ:', 'info');
            logResult(JSON.stringify(serializedData, null, 2), 'info');
            
            // 4. æ£€æŸ¥å…³é”®å­—æ®µ
            logResult('4. æ£€æŸ¥å…³é”®å­—æ®µ...', 'info');
            requiredFields.forEach(field => {
                const value = serializedData[field];
                if (!value || value.trim() === '') {
                    logResult(`âŒ åºåˆ—åŒ–åå­—æ®µä¸ºç©º: ${field}`, 'error');
                    allFieldsValid = false;
                } else {
                    logResult(`âœ… ${field}: "${value}"`, 'success');
                }
            });
            
            if (allFieldsValid) {
                logResult('ğŸ‰ å¿«é€Ÿæµ‹è¯•é€šè¿‡ï¼è¡¨å•æ•°æ®åºåˆ—åŒ–æ­£å¸¸', 'success');
            } else {
                logResult('âŒ å¿«é€Ÿæµ‹è¯•å¤±è´¥ï¼å‘ç°æ•°æ®åºåˆ—åŒ–é—®é¢˜', 'error');
            }
        }

        // æµ‹è¯•è¡¨å•åºåˆ—åŒ–
        function testFormSerialization() {
            clearResults();
            logResult('=== æµ‹è¯•è¡¨å•åºåˆ—åŒ– ===', 'info');
            
            const form = document.getElementById('test-trade-form');
            
            // åŸç”ŸFormDataæµ‹è¯•
            logResult('1. åŸç”ŸFormDataæµ‹è¯•:', 'info');
            const formData = new FormData(form);
            for (let [key, value] of formData.entries()) {
                logResult(`  ${key}: "${value}" (${typeof value})`, 'info');
            }
            
            // FormUtils.serializeæµ‹è¯•
            logResult('2. FormUtils.serializeæµ‹è¯•:', 'info');
            const serialized = FormUtils.serialize(form);
            logResult(JSON.stringify(serialized, null, 2), 'info');
            
            // ç›´æ¥DOMè·å–æµ‹è¯•
            logResult('3. ç›´æ¥DOMè·å–æµ‹è¯•:', 'info');
            const directData = {
                stock_code: document.getElementById('test-stock-code').value,
                stock_name: document.getElementById('test-stock-name').value,
                trade_type: document.getElementById('test-trade-type').value,
                price: document.getElementById('test-price').value,
                quantity: document.getElementById('test-quantity').value,
                reason: document.getElementById('test-reason').value,
                trade_date: document.getElementById('test-trade-date').value
            };
            logResult(JSON.stringify(directData, null, 2), 'info');
            
            // æ¯”è¾ƒç»“æœ
            logResult('4. ç»“æœæ¯”è¾ƒ:', 'info');
            const keys = Object.keys(directData);
            let hasDiscrepancy = false;
            
            keys.forEach(key => {
                const serializedValue = serialized[key];
                const directValue = directData[key];
                
                if (serializedValue !== directValue) {
                    logResult(`âŒ ä¸ä¸€è‡´: ${key} - åºåˆ—åŒ–:"${serializedValue}" vs ç›´æ¥:"${directValue}"`, 'error');
                    hasDiscrepancy = true;
                } else {
                    logResult(`âœ… ä¸€è‡´: ${key} = "${serializedValue}"`, 'success');
                }
            });
            
            if (!hasDiscrepancy) {
                logResult('ğŸ‰ è¡¨å•åºåˆ—åŒ–æµ‹è¯•é€šè¿‡ï¼', 'success');
            } else {
                logResult('âŒ è¡¨å•åºåˆ—åŒ–å­˜åœ¨é—®é¢˜ï¼', 'error');
            }
        }

        // æµ‹è¯•çœŸå®APIè°ƒç”¨
        async function testRealApiCall() {
            clearResults();
            logResult('=== æµ‹è¯•çœŸå®APIè°ƒç”¨ ===', 'info');
            
            const form = document.getElementById('test-trade-form');
            const formData = FormUtils.serialize(form);
            
            // æ•°æ®é¢„å¤„ç†ï¼ˆæ¨¡æ‹Ÿä¿®å¤åçš„é€»è¾‘ï¼‰
            logResult('1. æ•°æ®é¢„å¤„ç†...', 'info');
            
            // å¦‚æœå…³é”®å­—æ®µç¼ºå¤±ï¼Œä»DOMç›´æ¥è·å–
            if (!formData.stock_code || formData.stock_code.trim() === '') {
                formData.stock_code = document.getElementById('test-stock-code').value.trim();
                logResult('ä»DOMè·å–è‚¡ç¥¨ä»£ç : ' + formData.stock_code, 'warning');
            }
            
            if (!formData.stock_name || formData.stock_name.trim() === '') {
                formData.stock_name = document.getElementById('test-stock-name').value.trim();
                logResult('ä»DOMè·å–è‚¡ç¥¨åç§°: ' + formData.stock_name, 'warning');
            }
            
            // æ•°å€¼å­—æ®µè½¬æ¢
            if (formData.price) {
                formData.price = parseFloat(formData.price);
            }
            if (formData.quantity) {
                formData.quantity = parseInt(formData.quantity);
            }
            
            logResult('é¢„å¤„ç†åçš„æ•°æ®:', 'info');
            logResult(JSON.stringify(formData, null, 2), 'info');
            
            // å‘é€APIè¯·æ±‚
            logResult('2. å‘é€APIè¯·æ±‚...', 'info');
            try {
                const response = await axios.post('/api/trades', formData, {
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    timeout: 10000
                });
                
                logResult('âœ… APIè°ƒç”¨æˆåŠŸ!', 'success');
                logResult('å“åº”çŠ¶æ€: ' + response.status, 'success');
                logResult('å“åº”æ•°æ®:', 'success');
                logResult(JSON.stringify(response.data, null, 2), 'success');
                
            } catch (error) {
                logResult('âŒ APIè°ƒç”¨å¤±è´¥!', 'error');
                
                if (error.response) {
                    logResult(`HTTPé”™è¯¯ ${error.response.status}:`, 'error');
                    logResult(JSON.stringify(error.response.data, null, 2), 'error');
                    
                    // åˆ†æå…·ä½“é”™è¯¯
                    if (error.response.status === 422) {
                        logResult('è¿™æ˜¯æ•°æ®éªŒè¯é”™è¯¯ï¼Œæ£€æŸ¥å¿…å¡«å­—æ®µæ˜¯å¦æ­£ç¡®ä¼ é€’', 'warning');
                    }
                } else if (error.request) {
                    logResult('ç½‘ç»œé”™è¯¯: æ— æ³•è¿æ¥åˆ°æœåŠ¡å™¨', 'error');
                } else {
                    logResult('è¯·æ±‚é”™è¯¯: ' + error.message, 'error');
                }
            }
        }

        // é¡µé¢åŠ è½½å®Œæˆåçš„åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', () => {
            logResult('é¡µé¢åŠ è½½å®Œæˆï¼Œå¯ä»¥å¼€å§‹æµ‹è¯•', 'info');
            logResult('æç¤º: ç‚¹å‡»ä¸Šæ–¹æŒ‰é’®è¿›è¡Œå„ç§æµ‹è¯•', 'info');
        });
