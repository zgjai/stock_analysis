    <script>
        function checkJSObjects() {
            const checks = [
                { name: 'holdingDaysEditorManager', obj: window.holdingDaysEditorManager },
                { name: 'FloatingProfitCalculator', obj: window.FloatingProfitCalculator },
                { name: 'BatchProcessor', obj: window.BatchProcessor },
                { name: 'initializeHoldingDaysEditors', obj: window.initializeHoldingDaysEditors }
            ];
            
            const results = checks.map(check => {
                const exists = check.obj !== undefined;
                const status = exists ? 'success' : 'danger';
                const icon = exists ? 'check-circle' : 'times-circle';
                
                return `
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-${icon} text-${status} me-2"></i>
                        <span>${check.name}: ${exists ? '已定义' : '未定义'}</span>
                    </div>
                `;
            }).join('');
            
            document.getElementById('js-check-result').innerHTML = results;
        }
        
        function testDisplayHoldings() {
            const mockHoldings = [
                {
                    stock_code: '000001',
                    stock_name: '平安银行',
                    avg_price: 12.50,
                    total_quantity: 1000,
                    holding_days: 15
                }
            ];
            
            try {
                displayHoldings(mockHoldings);
                console.log('✅ displayHoldings 测试成功');
            } catch (error) {
                console.error('❌ displayHoldings 测试失败:', error);
            }
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(checkJSObjects, 1000);
        });
    </script>
